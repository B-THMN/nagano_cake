<div class="container"> 
  <h4><span style="background-color:#EFEFEF">　マイページ　</h4>
  <p><strong>登録情報</strong><%= link_to '編集する',edit_customer_path, class: 'btn btn-success' %></p>
  <table>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address%></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  
  <p><strong>配送先</strong><%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary' %></p>
  <p><strong>注文一覧</strong><%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %></p>
</div>