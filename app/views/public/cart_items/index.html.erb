  <div class="container">
   <h4><span style="background-color:#EFEFEF">ショッピングカート</h4>
    <div class="row">
      <div class="pull-right">
        <%= link_to " カートを空にする", cart_items_destroy_all_path, method: :delete,  data: {confirm: 'カートを空にして本当によろしいですか？'}, class: "btn btn-danger" %>
      </div>
      <table class="table table-hover table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag( cart_item.item, :image, size: "130x80", fallback: "no_image.jpg") %>
              <%= cart_item.item.name %>
            </td>
            <td><%= tax_price(cart_item.item.excluding_tax_price).to_s(:delimited) %></td>
            <td>
              <%= form_for(cart_item, url: cart_item_path(cart_item), method: :patch , remote: true)do |f| %>
              <%= f.number_field :quantity, class: "quantity", size: 10, min: 1, id: "quantity_cart" %>
              <%= f.submit "変更", class: "btn btn-success" %>
            　<% end %>
            </td>
            <td><%= purchase_price(cart_item).to_s(:delimited) %></td>
            <td>
              <%= link_to " 削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col-xs-9 margin-bottom">
        <div>
          <%= link_to " 買い物を続ける", items_path, class: "btn btn-info" %>
        </div>
      </div>
      <div class="col-xs-3 pull-right billing">
        <table class="table table-bordered text-right">
          <thead>
            <tr class="pull-right">
              <td class="warning">合計金額</td>
              <td class="text-right"><%= total_payment(@cart_items).to_s(:delimited) %></td>
            </tr>
          </thead>
        </table>
      </div>
    </div>
    <div class="row text-center">
      <%= link_to " 情報入力に進む", new_order_path, class: "btn btn-success center-block" %>
    </div>
  </div>