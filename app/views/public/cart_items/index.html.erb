<h2>ショッピングカート</h2>
<div>
<div>
<div>
<%= link_to " カートを空にする", customers_cart_items_path, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: "btn btn-danger" %>
</div>
<table>
<thead>
<tr class="info">
<th>商品名</th>
<th>単価(税込)</th>
<th>数量</th>
<th>小計</th>
<th></th>
</tr>
</thead>

<tbody>
<% @cart_items.each do |cart_item| %>
<tr id="cart-<%= cart_item.id %>">
<td class="text-left">
  <%= attachment_image_tag( cart_item.item, :image, size: "55x43", fallback: "no_image.jpg") %>
  <%= cart_item.item.name %>
</td>
<td class="text-right">
  ¥<%= purchase_price %>
</td>
<td>
  <%=form_with model: [@cart_items], local:true do |f| %>
  <%= f.select :quantity, [*(1..10)], { include_blank: '個数選択' } %>
  <%= f.submit "変更", class: "btn btn-info" %>
  <% end %>
</td>
<td class="text-right" id='sub_price-<%= cart_item.id %>'>
  ¥<%= purchase_price %>
</td>
<td>
  <%= link_to " 削除する", cart_item_path(cart_item), method: :delete, remote: true, data: {confirm: "#{cart_item.product.name}を削除してよろしいですか？"}, class: "btn btn-danger" %>
</td></tr>
<% end %>
</tbody>
</table>
<div>
<div>
<%= link_to " 買い物を続ける", items_path, class: "btn btn-info" %>
</div>
</div>

<table>
<thead>
<tr>
<td>合計金額</td>
<td>¥<%= total_price(@cart_items) %></td>
</tr>
</thead>
</table>
<div>
<%= link_to " 情報入力に進む", new_customers_order_path, data: {"turbolinks" => false}, class: "glyphicon glyphicon-pencil btn btn-success center-block" %>
</div>
</div>
</div>
