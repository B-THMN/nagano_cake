<div class="container">
<div class="row">

<h2>商品一覧<span>全<%= @items.count %>件</span></h2>
<div class="row">
<% @items.each do |item| %>
<div class="grid">
<%= link_to item_path(item.id), class: "btn-link" do %>
<div>
<%= attachment_image_tag(item, :image, size: "200x150", fallback: "no_image.jpg") %>
</div>
<p class="item-name">
<%= item.name %>
</p>
<% if item.is_active == true %>
<p>¥<%= item.excluding_tax_price %></p>
<% else %>
<p class="soldout">売り切れ</p>
<% end %>
</div>
<% end %>
<% end %>
</div>
</div>
</div>
