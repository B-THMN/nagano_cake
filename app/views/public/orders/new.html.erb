<div class="container">


  <h1>注文情報入力</h1>
<div>

<h3>支払い方法</h3>
<%= form_with model: @order, url: new_order_path, local: true do |f| %>
<%= f.radio_button :pay_type, :クレジットカード, checked: "checked" %>
<%= f.label :クレジットカード, class: "pay_type_label" %><br>
<%= f.radio_button :pay_type, :銀行振込 %>
<%= f.label :銀行振込, class: "pay_type_label", style: "display: inline-block;" %>

<br>

<h3>お届け先</h3>
<%= f.radio_button :address_option, 0, checked: "checked" %>
<%= f.label :"ご自身の住所" %><br>
<%= current_customer.post_code %><%= current_customer.address %><br>
<%= current_customer.last_name %><%= current_customer.first_name %>
</div><br>

<%= f.radio_button :address_option, 1 %>
<%= f.label :"登録済住所から撰択" %><br>
</div>

<%= f.radio_button :address_option, 2 %>
<%= f.label :"新しいお届け先"%><br>
<%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4 control-label" %>
<%= f.text_field :post_code, class: "col-sm-4 form-control-static" %>
</div>

<%= f.label :"住所", class: "col-sm-4 control-label" %>
<%= f.text_field :address, class: "col-sm-4 form-control-static" %>
</div>

<%= f.label :"宛名", class: "col-sm-4 control-label" %>
<%= f.text_field :name, class: "col-sm-4 form-control-static" %>

<div class="text-center">
<h3 class="col-12">
<%= f.submit '確認画面に進む', class:"btn btn-primary" %>
</h3>
</div>
</div>
</div>
<% end %>

</div>