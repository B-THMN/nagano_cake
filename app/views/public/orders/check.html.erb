<div class="container">
  <h4><span style="background-color:#EFEFEF">　注文情報確認　</h4>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart| %>
      <tr>
        <td>
          <%= attachment_image_tag(cart.item, :image, size: "60x50", fallback: "no_image.jpg") %>
          <%= cart.item.name %>
        </td>
        <td><%= tax_price(@item.excluding_tax_price) %></td>
        <td>数量</td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
  <table>
    <tr>
      <td>送料</td>
      <td>¥<%= @order.postage %></td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td>¥<%= total_payment(@order_details).to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>請求金額</td>
      <td>¥<%= @oders.total_payment.to_s(:delimited) %></td>
    </tr>
  </table>
  <table>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>お届け先</th>
      <td><%= "#{@order.post_code} #{@order.address} #{@order.name}" %></td>
    </tr>
  </table>
</div>