 <div class="container">
   <h4><span style="background-color:#EFEFEF">　注文情報確認　</h4>
    <div class="row">
      <div class="col-xs-9">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart| %>
              <tr>
                <td>
                  <%= attachment_image_tag(cart.item, :image, size: "60x50", fallback: "no_image.jpg") %>
                  <%= cart.item.name %>
                </td>
                <td><%= tax_price(cart.item.excluding_tax_price).to_s(:delimited) %></td>
                <td><%= cart.quantity %></td>
                <td><%= purchase_price(cart).to_s(:delimited) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class="col-xs-3">
        <table class="table table-hover table-bordered">
          <tr>
            <td>送料</td>
            <td>¥<%= @order.postage %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td>¥<%= total_payment(@cart_items).to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td>¥<%= billing_amount(@order).to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <table>
        <tr>
          <th>支払方法</th>
          <td></td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td></td>
          <td><%= "#{@order.postcode} #{@order.address} #{@order.name}" %></td>
        </tr>
      </table>
    </div>
 </div>