<div class="container">
  <h4><span style="background-color:#EFEFEF">　ログイン　</h4>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h5><span style="background-color:#EFEFEF">　会員の方はこちらからログイン　</h5>
    <div class="field">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %>
    </div>
  
    <div class="field">
      <%= f.label "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn-primary' %>
    </div>
  <% end %>
  
  <h5><span style="background-color:#EFEFEF">　会員登録がお済みでない方　</h5>
  <table>
    <tr>
      <td><%= render "customers/shared/links" %></td>
      <td>から新規登録を行ってください。</td>
    </tr>
  </table>

</div>
 
