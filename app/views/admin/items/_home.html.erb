  <div class="low">
    <div class="col-md-11">
      <table class="table mx-auto">
        <tr>
          <td class="td-label">商品画像</td>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td class="td-label">商品名</td>
          <td><%= f.text_field :name, size: "30", class:"form-control"%></td>
        </tr>
        <tr>
          <td class="td-label">商品説明</td>
          <td><%=f.text_area :introduction, size: "30x5", class:"form-control"%></td>
        </tr>
        <tr>
          <td class="td-label">ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--", size: "30", class: "form-control" %></td>
        </tr>
        <tr>
          <td class="td-label">税抜き価格</td>
          <td>¥<%=f.text_field :excluding_tax_price.to_s(:delimited), size: "30", class:"form-control"%></td>
        </tr>
        <tr>
          <td class="td-label">販売ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
          </td>
        </tr>
      </table>
    </div>
  </div>