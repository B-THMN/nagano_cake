<main>
   <h2>商品一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item|%>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item.id) %></td>
            <td><%= item.excluding_tax_price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active == true %>
            <td class="active_color">販売中</td>
             <% else %>
            <td class="inactive_color">販売停止中</td>
             <% end %>
            </tbody>
        <% end %>
      </tbody>
    </table>
</main>
