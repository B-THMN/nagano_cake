<div class="container">
  <h4><span style="background-color:#EFEFEF">　注文履歴一覧　</h4>
  <table class="table-striped table table-hover">
    <thead class="thead-light">
      <tr>
        <th>注文日</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <!--注文履歴のeach文？-->
      <% @orders.each do |order| %>
        <tr>
        <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S") ,admin_order_path(order) %></td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.order_details.sum(:quantity) %></td>
        <td><%= order.order_status %></td>
        <% end %>


      <!--end-->
    </tbody>
  </table>
<div class="text-center"><%= paginate @orders %></div>

</div>