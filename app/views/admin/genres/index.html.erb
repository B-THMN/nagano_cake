
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4><span style="background-color:#EFEFEF">　ジャンル一覧・追加　</h4>
            <%= form_with model: [:admin, @genre], local: true do |f| %>
            <table class="table">
              <thead>
                <tr>
                  <th>ジャンル名</th>
                  <th><%= f.text_field :name %></th>
                  <th><%= f.submit "新規登録",class: 'btn btn-success' %></th>
                </tr>
              </thead>
            </table>
            <% end %>
        </div>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre),class: 'btn btn-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

