<div class="container">
  <h4><span style="background-color:#EFEFEF">　<%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集　</h4>
  <%= form_with model:@customer,url:admin_customer_path(@customer.id),local:true do |f| %>
    <table class="table">
      <tbody>
        <tr>
          <td><%= f.label "氏名" %></td>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %></td>
          <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label "フリガナ" %></td>
          <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label "郵便番号" %></td>
          <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label "住所" %></td>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label "電話番号" %></td>
          <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><%= f.radio_button :is_deleted, :false %>
        　   <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
        　</td>
          <td><%= f.radio_button :is_deleted, :true %>
        　   <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
        　</td>
        </tr>
        <tr>
          <td>
            <div class="actions col-8  mx-auto d-flex">
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>

