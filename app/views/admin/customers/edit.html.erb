<h4><span style="background-color:#EFEFEF"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集　</h4>

<%= form_with model:@customer,url:admin_customer_path(@customer.id),local:true do |f| %>

  <div class="field">
    <%= f.label "名前" %>
    <%= f.label "（姓）" %>
    <%= f.text_field :last_name, autofocus: true,autocomplete: "last_name"  %>
    <%= f.label "（名）" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.label "（セイ）" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label "（メイ）" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

　<div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

 <label class="mr-4">会員ステータス</label>
      　    <%= f.radio_button :is_deleted, :false %>
      　    <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
      　    <%= f.radio_button :is_deleted, :true %>
      　    <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
        </div>

   <div class="actions">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
<% end %>
