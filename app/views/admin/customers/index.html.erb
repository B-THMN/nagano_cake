<main>
   <h2>会員一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer|%>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name,admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td>
             <% if customer.is_deleted == false %>
             <i class="active_color">有効</i>
             <% else %>
             <i class="inactive_color">退会</i>
             <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
</main>
</main>