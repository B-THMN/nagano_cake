<div class="container">
    <main>
     <h4><span style="background-color:#EFEFEF">　会員一覧　</h4>
      <table class="table table-hover table-inverse" "px-6 mx-auto">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer|%>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name,admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td>
               <% if customer.is_deleted == false %>
               <p class="text-success">有効</p>
               <% else %>
               <p class="text-secondary">退会</p>
               <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mx-auto col-3"><%= paginate @customers  %></div>

  </main>
  </main>
  </div>
  </div>
  </div>