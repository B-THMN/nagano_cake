<div class ="container m-5">
    <div class="row">
       <div class="col-2"></div>
         <h4 class="my-4"><span style="background-color:#EFEFEF">管理者ログイン</span></h4>
    </div>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
 <div class='row'>
   <div class="px-10 mx-auto">
 

    <div class="center-form">
     <label forsize:="inputEmail3" class="text-center">メールアドレス</label></br>
      <div class="col-sm-10">
       <%= f.email_field :email, autofocus: true, autocomplete: "email" , size: "100"%>
      </div>
    </div>

     <div class="center-form">
      <label forsize:="inputEmail3" class="text-center">パスワード</label></br>
       <div class="col-sm-10">
       　<%= f.password_field :password, autocomplete: "current-password", size: "100" %>
       </div>
     </div>
     
      <div class="px-10 mx-auto">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary"  %>
        </div>
      </div>  
<% end %>

   </div>
</div>
</div>
