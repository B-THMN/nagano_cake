<div class ="container m-5">
    <div class="row">
       <div class="col-2"></div>
         <h4 class="my-4"><span style="background-color:#EFEFEF">管理者ログイン</span></h4>
    </div>
</div>
<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
   <label for="inputEmail3" class="text-center">メールアドレス</label></br>
    <div class="col-sm-10">
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group">
   <label for="inputEmail3" class="text-center">パスワード</label></br>
    <div class="col-sm-10">
    　<%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary"  %>
  </div>
<% end %>
</div>
</div>
</div>
